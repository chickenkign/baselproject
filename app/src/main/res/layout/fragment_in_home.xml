<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/r"
    tools:context=".InHomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/BTNInHomeSoon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="99dp"
            android:text="Button"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/BTNDontClickIt"
            app:layout_constraintEnd_toStartOf="@+id/BTNLivingRoom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="147dp"
            android:text="Button"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/BTNInHomeSoon"
            app:layout_constraintTop_toTopOf="@+id/BTNInHomeSoon" />

        <Button
            android:id="@+id/BTNDontClickIt"
            android:layout_width="355dp"
            android:layout_height="0dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="Dont Click Here"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BTNLivingRoom" />

        <Button
            android:id="@+id/BTNLivingRoom"
            android:layout_width="76dp"
            android:layout_height="405dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="74dp"
            android:layout_marginBottom="96dp"
            android:text="Button"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/BTNDontClickIt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/BTNInHomeSoon"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>